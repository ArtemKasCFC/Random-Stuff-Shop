        .product-content
            h2.heading-secondary #{product.title}
            .product-price
                if product.priceDiscount
                    p.old-price $#{product.price}
                    p.new-price $#{product.priceDiscount}
                else
                    p.new-price $#{product.price}
            .product-rating-container
                i.ph-fill.ph-star
                i.ph-fill.ph-star
                i.ph-fill.ph-star
                i.ph-bold.ph-star
                i.ph-bold.ph-star
                span.product-rating #{product.ratingsAverage} (#{product.ratingsQuantity})
            p.product-full-desc #{product.description}
            .purchase-info
                .amount
                    i.ph-fill.ph-arrow-square-left.arrow
                    input#amount(type='number' min='0' max='99' maxlength='2' value='1' placeholder='1')
                    i.ph-fill.ph-arrow-square-right.arrow
                button.add-to-cart-btn.btn Add to cart
