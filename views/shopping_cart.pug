extends index 

block content
    section.section-sc
        .container
            p.subheading Shopping Cart
            h2.heading-secondary I don&apos;t know just some text
            if products && products.length > 0 
                .sc-container
                    .sc-info-container
                        .sc-info
                            p.sc-info__total-price
                                | Total Price: 
                                span $#{productsTotal.total.toFixed(2)}
                            p.sc-info__discount
                                | Discount: 
                                span $#{productsTotal.discount.toFixed(2)}
                            p.sc-info__final-price
                                | Final Price: 
                                span $#{productsTotal.final.toFixed(2)}
                        button.check-out-btn.btn Check Out
                    .sc-products
                        ul.sc-products-list
                            each product in products
                                li.sc-product
                                    img.sc-product__img(src=`/img/products/${product.image}` alt=`${product.title}`)
                                    h3.heading-tertiary #{product.title}
                                    p.sc-product__price $#{product.price}
                                    p.sc-product__discount $#{product.priceDiscount}
                                    .amount
                                        if product.quantity === 1
                                            i.ph-fill.ph-arrow-square-left.arrow.arrow--shade
                                        else 
                                            i.ph-fill.ph-arrow-square-left.arrow
                                        input#amount(type='number' min='1' max='99' value=`${product.quantity}` placeholder='0')
                                        if product.quantity === 99
                                            i.ph-fill.ph-arrow-square-right.arrow.arrow--shade
                                        else 
                                            i.ph-fill.ph-arrow-square-right.arrow
                                    p.sc-product__total $#{(product.price * product.quantity).toFixed(2)}
                                    button.sc-product__btn
                                        ion-icon(name='close-outline')
            else 
                p Your Shopping Cart is empty